{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "array",
  "items": {
    "type": "object",
    "required": ["id", "title_full", "title", "href", "description", "outcome", "pillar", "area", "relatedIds", "risk"],
    "properties": {
      "id": {
        "type": "string",
        "pattern": "^[A-Z]{3,10}\\d{2}-BP\\d{2}$"
      },
      "title_full": {
        "type": "string",
        "minLength": 1
      },
      "title": {
        "type": "string",
        "minLength": 1
      },
      "href": {
        "type": "string",
        "format": "uri"
      },
      "description": {
        "type": "string",
        "minLength": 1
      },
      "outcome": {
        "type": "string"
      },
      "pillar": {
        "type": "string",
        "enum": ["OPERATIONAL_EXCELLENCE", "SECURITY", "RELIABILITY", "PERFORMANCE_EFFICIENCY", "COST_OPTIMIZATION", "SUSTAINABILITY"]
      },
      "area": {
        "type": "array",
        "items": {
          "type": "string"
        },
        "minItems": 1
      },
      "relatedIds": {
        "type": "array",
        "items": {
          "type": "string",
          "pattern": "^[A-Z]{3,10}\\d{1,3}(-BP\\d{2})?$"
        }
      },
      "risk": {
        "type": "string",
        "enum": ["HIGH", "MEDIUM", "LOW"]
      },
      "lens": {
        "type": "string",
        "default": "FRAMEWORK"
      }
    },
    "additionalProperties": false
  }
}
